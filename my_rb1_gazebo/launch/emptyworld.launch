<?xml version="1.0"?>
  <launch>
  <param name="robot_description" command="$(find xacro)/xacro '$(find my_rb1_description)/urdf/my_rb1_robot.xacro'" />  
    <arg name="model_name" default="my_robot"/>
    <arg name="x" default="-0.5"/>
    <arg name="y" default="-1.5"/>
    <arg name="z" default="0.5"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
          args="-urdf -param robot_description -model $(arg model_name) -x $(arg x) -y $(arg y) -z $(arg z)" />
</launch>
